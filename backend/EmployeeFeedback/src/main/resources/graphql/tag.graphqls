type Tag {
	tagId: ID!
	name: String!
	color: String!
	totalMessages: Long
	createdBy: Employee
}

input TagInput {
	employeeId: Long
	name: String
	color: String
}

extend type Mutation {
	newTag(input: TagInput) : Tag!
	removeTag(input: TagInput) : Tag!
}

extend type Query {
	findAllTags: [Tag]!
}