type MessageThread {
	threadId: ID!
	sentTo: Employee
	tags: [Tag]
	subject: String
	createdAt: String
	modifiedAt: String
	latestText: String
	createdBy: Employee
	messages: [Message]
	readByManagers: [Long]
	readByEmployee: [Long]
}

input ThreadInput {
	sentTo: Long!
	subject: String! 
	text: String! 
	employeeId: Long! 
}

input ThreadTagInput {
	employeeId: Long!
	threadId: Long!
	tagId : Long!
}

extend type Mutation {
	newThread(input: ThreadInput) : MessageThread!	
	addTagToThread(input: ThreadTagInput) : MessageThread!
	removeTagFromThread(input: ThreadTagInput) : MessageThread!
	readMessageThread(threadId: Long!, employeeId: Long!) : MessageThread!
}

extend type Query {
	findAllSentThreads(employeeId: ID!): [MessageThread]!
	findAllReceivedThreads(employeeId: ID!): [MessageThread]!
}